// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model with UUID primary key
model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  samples         Sample[]        @relation("SampleCreator")
  assignedSamples Sample[]        @relation("AssignedAnalyst")
  tests           Test[]
  reports         Report[]
  clientSamples   Sample[]        @relation("ClientSamples")
}

// Role enum for RBAC - 5 system roles
enum Role {
  ADMIN             // Full access, manage users/roles, system settings
  LAB_MANAGER       // QA/Reviewer - approve/release results & COAs, view all, edit Samples/Tests, manage templates
  ANALYST           // Create/edit Samples & assigned Tests, enter results, upload attachments, request re-tests
  SALES_ACCOUNTING  // Read Samples, read accounting fields, create/update quotes/PO/SO, set invoice flags
  CLIENT            // Portal view of their Samples, results, and final COAs only (read-only)
}

// Sample model
model Sample {
  id          String   @id @default(uuid()) @db.Uuid
  sampleId    String   @unique
  type        String
  status      SampleStatus @default(RECEIVED)
  metadata    Json?    // JSONB for flexible metadata (including accounting fields, quotes, PO, SO, invoice flags)
  snapshot    Json?    // JSONB for audit snapshots
  receivedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  userId         String   @db.Uuid
  user           User     @relation("SampleCreator", fields: [userId], references: [id])
  
  // Assigned analyst for this sample
  assignedUserId String?  @db.Uuid
  assignedUser   User?    @relation("AssignedAnalyst", fields: [assignedUserId], references: [id])
  
  // Client who owns this sample (for portal access)
  clientId       String?  @db.Uuid
  client         User?    @relation("ClientSamples", fields: [clientId], references: [id])
  
  tests          Test[]
  
  @@index([userId])
  @@index([assignedUserId])
  @@index([clientId])
  @@index([status])
}

enum SampleStatus {
  RECEIVED
  IN_PROGRESS
  COMPLETED
  REJECTED
}

// Test model
model Test {
  id          String   @id @default(uuid()) @db.Uuid
  testName    String
  result      String?
  status      TestStatus @default(PENDING)
  metadata    Json?    // JSONB for test parameters
  snapshot    Json?    // JSONB for audit snapshots
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completedAt DateTime?
  
  // Relations
  sampleId    String   @db.Uuid
  sample      Sample   @relation(fields: [sampleId], references: [id])
  userId      String   @db.Uuid
  user        User     @relation(fields: [userId], references: [id])
  reports     Report[]
  
  @@index([sampleId])
  @@index([userId])
  @@index([status])
}

enum TestStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  APPROVED      // Approved by Lab Manager
  RELEASED      // Released by Lab Manager
}

// Report (COA) model
model Report {
  id          String       @id @default(uuid()) @db.Uuid
  title       String
  pdfUrl      String?
  status      ReportStatus @default(DRAFT)
  version     Int          @default(1)
  metadata    Json?        // JSONB for report metadata
  snapshot    Json?        // JSONB for audit snapshots
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  finalizedAt DateTime?    // When finalized by Lab Manager
  releasedAt  DateTime?    // When released by Lab Manager
  
  // Relations
  testId      String   @db.Uuid
  test        Test     @relation(fields: [testId], references: [id])
  userId      String   @db.Uuid
  user        User     @relation(fields: [userId], references: [id])
  
  @@index([testId])
  @@index([userId])
  @@index([status])
}

enum ReportStatus {
  DRAFT         // Created by Analyst
  FINALIZED     // Finalized by Lab Manager
  RELEASED      // Released by Lab Manager - visible to clients
}

// File attachment model
model Attachment {
  id          String   @id @default(uuid()) @db.Uuid
  fileName    String
  fileUrl     String
  fileSize    Int
  mimeType    String
  metadata    Json?    // JSONB for file metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([fileName])
}

// Audit Log model - read-only for tracking all system actions
model AuditLog {
  id          String   @id @default(uuid()) @db.Uuid
  action      String   // Action performed (CREATE, UPDATE, DELETE, APPROVE, RELEASE, etc.)
  resource    String   // Resource type (SAMPLE, TEST, REPORT, USER, etc.)
  resourceId  String?  @db.Uuid // ID of the affected resource
  userId      String   @db.Uuid // User who performed the action
  userName    String   // Snapshot of user name at time of action
  userRole    String   // Snapshot of user role at time of action
  changes     Json?    // JSONB snapshot of what changed
  metadata    Json?    // Additional context
  ipAddress   String?  // IP address of request
  userAgent   String?  // User agent of request
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([resource])
  @@index([resourceId])
  @@index([createdAt])
}
