{
    "name": "laboratory-lims-pro",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
        "dev:web": "npm run dev --workspace=web",
        "dev:api": "npm run start:dev --workspace=api",
        "build": "npm run build --workspaces",
        "build:web": "npm run build --workspace=web",
        "build:api": "npm run build --workspace=api",
        "lint": "npm run lint --workspaces",
        "test": "npm run test --workspaces",
        "test:e2e": "playwright test",
        "prisma:generate": "npm run prisma:generate --workspace=api",
        "prisma:migrate": "npm run prisma:migrate:dev --workspace=api",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "concurrently": "^9.1.2",
        "@playwright/test": "^1.49.1"
    }
}
